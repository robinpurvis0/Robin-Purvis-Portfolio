<%- include('commonHeader.ejs', {title: owner.fullname}); %>

<h1 class="mt-3 text-center">Owner Info</h1>
<hr class="featurette-divider" />

<div class="text-center">
<h3>First Name: <em><%- owner.first_name %></em></h3>
<h3>Last Name: <em><%- owner.last_name %></em></h3>
<h3>Gender: <em><%- owner.gender %></em></h3>
<h3>Age: <em><%- owner.age %></em></h3>
<h3>Address: <em><%- owner.address %></em></h3>
<h3>State: <em><%- owner.state %></em></h3>
<h3>Zipcode: <em><%- owner.zipcode %></em></h3>
<h3>Phone number: <em><%- owner.phone %></em></h3>
<h3><p>Insurance: <a href="/ins/detail/<%- owner.insuranceDetailID %>"><em>Click here to view insurance information</em></a></p></h3>
</div>

<h2 class="bg-dark text-white text-center">
  <%- owner.fullname %>'s Current Titles
</h2>

<% for (let i=0; i < cars.length; i++) {%>
<div class="row featurette text-center"> 
    <div class="col-md-4 order-md-1">
      <img
        src="<%- cars[i].logo %>"
        alt="This is a image of a <%- cars[i].make %>, <%- cars[i].model %>"
        class="img-fluid"
      />
    </div>
    <div class="col-md-8 order-md-2 align-self-center">
      <div class="right-content">
        <p>Make: <%- cars[i].make %></p>
        <p>Model: <%- cars[i].model %></p>
        <p>Year: <%- cars[i].year %></p>
        <p>Vin: <%- cars[i].vin %></p>
        <p><a href="/owner/sell/<%-cars[i]._id%>">Click here to sell car</a></p>
        <p><a href="/delete/<%-cars[i]._id%>"> Click here to delete car title</a></p>
       </div>
    </div>
  </div>
  <hr>
  <% } %>

  <a href="/owner/update/<%-owner._id%>"> Update Owner</a>
  <a href="/owner/delete/<%-owner._id%>"> Delete Owner</a>

  <%- include('commonFooter.ejs'); %>